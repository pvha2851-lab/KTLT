#include<bits/stdc++.h>
#define ll long long
using namespace std;
const ll mod=1e9+7;
ll binpow(ll x,ll y){
    ll res=1;
    while(y>0){
        if(y%2==1)	res=res*x%mod;
        x=x*x%mod;
        y=y/2;
    }
    return res;
}
ll stringtodec(string sa,string sb){
    ll a=0,b=0;
    for(char c:sa){
        a=(a*10+(c-'0'))%mod;
    }
    for(char c:sb){
        b=(b*10+(c-'0'))%(mod-1);
    }
    return binpow(a,b);
}
int main(){
    int t;
    cin>>t;
    cin.ignore();
    while(t--){
        string sa,sb;
        cin>>sa>>sb;
        cout<<stringtodec(sa,sb)<<endl;
    }
    return 0;
}
