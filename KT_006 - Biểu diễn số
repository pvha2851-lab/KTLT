#include<bits/stdc++.h>
#define ll long long
using namespace std;
vector<ll> val; 
ll n,m;
ll cnt;
void Try(ll i,ll sum){
	if(sum==0){
		cnt++;
		return;
	}
	if(sum<0)	return;
	for(int j=i;j<val.size();j++){
		if(val[i]>sum) break;
		Try(j,sum-val[j]);
	}
}
int main(){
	int t;
	cin>>t;
	while(t--){
		val.clear();
		cin>>n>>m;
		ll res=1;
		while(n>=res){
			val.push_back(res);
			res=res*m;
		} 
		cnt=0;
		Try(0,n);
		cout<<cnt<<endl;
	}
	return 0;
} 
