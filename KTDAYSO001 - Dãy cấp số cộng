#include<bits/stdc++.h>
#define ll long long
using namespace std;
int main(){
	int t;
	cin>>t;
	while(t--){
		int n;
		cin>>n;
		vector<ll> a(n);
		for(int i=0;i<n;i++){
			cin>>a[i];
		}
		ll d=a[1]-a[0];
		bool check=true;
		for(int i=2;i<n;i++){
			if(a[i]-a[i-1]!=d){
				check=false;
				break;
			}
		}
		if(check)	cout<<"YES\n";
		else	cout<<"NO\n";
	}
	return 0;
}
