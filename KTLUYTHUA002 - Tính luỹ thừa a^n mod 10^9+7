#include<bits/stdc++.h>
#define ll long long
using namespace std;
const ll mod=1e9+7;
ll binpow(ll x,ll y){
	ll res=1;
	while(y>0){
		if(y%2==1)	res=res*x%mod;
		x=x*x%mod;
		y=y/2;
	}
	return res;
}
int main(){
	int t;
	cin>>t;
	while(t--){
		ll n,k;
		cin>>n>>k;
		cout<<binpow(n,k)<<endl;
	}
	return 0;
} 
