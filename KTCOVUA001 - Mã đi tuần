#include <bits/stdc++.h>
using namespace std;
int t, n, k, x, y, visited[20][20];
int dx[]={-2,-2,-1,-1,1,1,2,2};
int dy[]={-1,1,-2,2,-2,2,-1,1};
bool check(int a,int b)
{
	if(a>=1&&a<=n&&b>=1&&b<=n) 
		return true;
	return false;
}
void Try(int a, int b, int step)
{
  if(step==k+1) return;
  visited[a][b]=1;
  for(int i=0;i<=7;i++)
  {
    if(check(a+dx[i],b+dy[i]))
    	Try(a+dx[i],b+dy[i],step+1);
  }
}
int main () 
{
  cin >> t;
  while(t--)
  {
    cin>>n>>k>>x>>y;
    for(int i=1;i<=n;i++)
    	for(int j=1;j<=n;j++)
    		visited[i][j]=0;
	Try(x,y,0);
	int res=0;
	for(int i=1;i<=n;i++)
		for(int j=1;j<=n;j++)
			if(visited[i][j]==1)
				res++;
    cout<<res<<endl;
  }
return 0;
}
