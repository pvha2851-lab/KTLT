#include<bits/stdc++.h>
#define ll long long
using namespace std;
const ll mod=1e9+7;
int main(){
	int t;
	cin>>t;
	while(t--){
		priority_queue<ll,vector<ll>,greater<ll>> Q;
		int n;
		cin>>n;
		for(int i=0;i<n;i++){
			ll x;	cin>>x;
			Q.push(x);
		}
		ll res=0;
		while(Q.size()>1){
			ll a=Q.top();Q.pop();
			ll b=Q.top();Q.pop();
			res+=a+b;
			res%=mod;
			Q.push(a+b);
		}
		cout<<res<<endl;
	}
	return 0;
}
