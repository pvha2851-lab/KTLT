#include<bits/stdc++.h>
#define ll unsigned long long
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        ll N,L;
        cin>>N>>L;
        ll sum_thieu=0;
        for(int i=0;i<N-1;i++){
            ll x;cin>>x;
            sum_thieu+=x;
        }
        ll sum_full=L*N+pow(N,2)/2-N/2;
        cout<<sum_full-sum_thieu<<endl;
    }
    return 0;
}
